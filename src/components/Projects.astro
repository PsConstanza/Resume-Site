---
import PythonIcon from '../components/icons/Python.astro'

const TAGS = {
    PYTHON: {
        name: 'Python',
        class: 'text-white',
        icon: PythonIcon
    }

}

const PROJECTS = [
    {
        title: "Titulo",
        description: "Descripci√≥n",
        link: "www...",
        github: "www",
        image: "",
        tags: [TAGS.PYTHON]
        
    }
]
---
<div>
    {
        PROJECTS.map( ({title, description, tags, image}) => (
            <article>
                <h3 class="text-2xl font-semibold text-purple-200 mb-2">{title}</h3>
                <p class="text-lg mb-4 text-violet-200/90 text-pretty">{description}</>
                <ul>
                    {tags.map( tag => (
                        <li class={`px-2 py-1 rounded ${tag.class} flex items-center gap-1`}>
                            <tag.icon class="w-4 h-4"/>
                            {tag.name}
                        </li>
                    ))}
                </ul>
                <img 
                    src={image}
                    alt={`Captura de pantalla del proyecto ${image}`}
                />


            </article>
        )

        )
    }
</div>